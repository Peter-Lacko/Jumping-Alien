	@Test
	public void testEndMove(){
		alien.startMove("right");
		for (int i = 0; i < 10 ; i++) {
			alien.advanceTime(0.1);
		}
		alien.endMove("right");
		alien.advanceTime(0.1);
		assertEquals(0.0, alien.getHorizontalVelocity(),Util.DEFAULT_EPSILON);
	}
	
