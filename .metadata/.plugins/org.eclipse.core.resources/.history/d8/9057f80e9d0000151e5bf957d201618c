	@Test
	public void workingProgramTest(){
		worldStandard.advanceTime(0.01);
		//(Buzam is ducked)
		assertEquals(1.0, buzam2.getMaxHorizontalVelocity(), Util.DEFAULT_EPSILON);
		worldStandard.advanceTime(0.007);
		//(Buzam is no longer ducked)
		assertEquals(3.0, buzam2.getMaxHorizontalVelocity(), Util.DEFAULT_EPSILON);
		worldStandard.advanceTime(0.1);
		assertTrue(buzam2.isJumping());
		System.out.println(variable2b.compute().getValue());
		worldStandard.advanceTime(0.003);
		assertFalse(buzam2.isJumping());
		System.out.println(buzam2.getIntPositionAt(2));
		System.out.println(variable2b.compute().getValue());
		for (int i = 1; i<= 100; i++){
			worldStandard.advanceTime(0.001);
//			System.out.println(variable2b.compute().getValue());
		}
	}
	
	@Test
	public void notWellFormed_ActionInForEach(){
		
	}

}
